---
import Layout from "../../layouts/Layout.astro";
import playlists from "../../data/playlists.json";

const idParam = Astro.url.searchParams.get("id");
const id = idParam ? parseInt(idParam, 10) : null;
const playlist = id ? playlists.find(p => p.id === id) : null;

// Ordenar canciones alfab√©ticamente
const cancionesOrdenadas = playlist ? [...playlist.canciones].sort((a, b) => a.localeCompare(b)) : [];
---

<Layout title={playlist ? `Admin - ${playlist.nombre}` : "Playlist no encontrada"}>
  {!playlist ? (
    <div class="error-container">
      <h1>‚ùå Playlist no encontrada</h1>
      <a href="/" class="btn-back">‚Üê Volver al inicio</a>
    </div>
  ) : (
    <main class="admin-container">
      <header class="header">
        <a href="/" class="btn-back">‚Üê</a>
        <div class="header-content">
          <h1>Admin: {playlist.nombre}</h1>
          <p class="subtitle">Marca las canciones que van saliendo</p>
        </div>
      </header>

      <div class="stats">
        <div class="stat">
          <span class="stat-value" id="marcadas-count">0</span>
          <span class="stat-label">Marcadas</span>
        </div>
        <div class="stat">
          <span class="stat-value">{cancionesOrdenadas.length}</span>
          <span class="stat-label">Total</span>
        </div>
      </div>

      <button id="reset" class="btn-reset">üîÑ Resetear Todo</button>

      <div id="lista-canciones" class="canciones-lista"></div>

      <script define:vars={{ playlistId: playlist.id, canciones: cancionesOrdenadas }}>
        const lista = document.getElementById("lista-canciones");
        const btnReset = document.getElementById("reset");
        const contadorMarcadas = document.getElementById("marcadas-count");

        const STORAGE_KEY = `bingo-admin-${playlistId}`;

        function guardar(marcadas) {
          localStorage.setItem(STORAGE_KEY, JSON.stringify(marcadas));
        }

        function cargar() {
          const guardado = localStorage.getItem(STORAGE_KEY);
          return guardado ? JSON.parse(guardado) : {};
        }

        function actualizarContador(marcadas) {
          const count = Object.values(marcadas).filter(Boolean).length;
          if (contadorMarcadas) {
            contadorMarcadas.textContent = count;
          }
        }

        function render() {
          if (!lista) return;
          lista.innerHTML = "";
          
          const marcadas = cargar();

          canciones.forEach((cancion, index) => {
            const item = document.createElement("div");
            item.className = "cancion-item";
            if (marcadas[cancion]) {
              item.classList.add("marcada");
            }

            const checkbox = document.createElement("div");
            checkbox.className = "checkbox";
            if (marcadas[cancion]) {
              checkbox.innerHTML = "‚úì";
            }

            const texto = document.createElement("span");
            texto.className = "cancion-texto";
            texto.textContent = cancion;

            item.appendChild(checkbox);
            item.appendChild(texto);

            item.addEventListener("click", () => {
              marcadas[cancion] = !marcadas[cancion];
              item.classList.toggle("marcada");
              checkbox.innerHTML = marcadas[cancion] ? "‚úì" : "";
              guardar(marcadas);
              actualizarContador(marcadas);
            });

            lista.appendChild(item);
          });

          actualizarContador(marcadas);
        }

        if (btnReset) {
          btnReset.addEventListener("click", () => {
            if (confirm("¬øSeguro que quieres resetear todas las canciones marcadas?")) {
              localStorage.removeItem(STORAGE_KEY);
              render();
            }
          });
        }

        render();
      </script>
    </main>
  )}
</Layout>

<style>
  :global(body) {
    margin: 0;
    padding: 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background: #f5f5f5;
    min-height: 100vh;
  }

  .error-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 20px;
    text-align: center;
  }

  .admin-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 16px;
    min-height: 100vh;
  }

  .header {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 24px;
    padding: 12px 0;
  }

  .header-content {
    flex: 1;
  }

  .header h1 {
    font-size: 22px;
    font-weight: 700;
    margin: 0 0 4px 0;
    color: #111;
  }

  .subtitle {
    font-size: 14px;
    color: #666;
    margin: 0;
  }

  .btn-back {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 8px;
    background: #fff;
    border: 1px solid #e0e0e0;
    color: #111;
    text-decoration: none;
    font-size: 18px;
    transition: all 0.2s;
    flex-shrink: 0;
  }

  .btn-back:hover {
    background: #f5f5f5;
    transform: translateX(-2px);
  }

  .stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
    margin-bottom: 16px;
  }

  .stat {
    background: #fff;
    border-radius: 12px;
    padding: 16px;
    text-align: center;
    border: 2px solid #e0e0e0;
  }

  .stat-value {
    display: block;
    font-size: 32px;
    font-weight: 700;
    color: #667eea;
    margin-bottom: 4px;
  }

  .stat-label {
    display: block;
    font-size: 12px;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .btn-reset {
    width: 100%;
    padding: 14px;
    background: #ef4444;
    color: #fff;
    border: none;
    border-radius: 8px;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    margin-bottom: 24px;
  }

  .btn-reset:hover {
    background: #dc2626;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
  }

  .btn-reset:active {
    transform: translateY(0);
  }

  .canciones-lista {
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding-bottom: 24px;
  }

  :global(.cancion-item) {
    background: #fff;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    padding: 16px;
    display: flex;
    align-items: center;
    gap: 12px;
    cursor: pointer;
    transition: all 0.2s;
    user-select: none;
  }

  :global(.cancion-item:hover) {
    border-color: #667eea;
    transform: translateX(4px);
  }

  :global(.cancion-item.marcada) {
    background: #4ade80;
    border-color: #22c55e;
  }

  :global(.cancion-item.marcada .cancion-texto) {
    color: #fff;
    font-weight: 600;
  }

  :global(.cancion-item.marcada .checkbox) {
    background: #22c55e;
    border-color: #16a34a;
    color: #fff;
  }

  :global(.checkbox) {
    width: 28px;
    height: 28px;
    border: 2px solid #d1d5db;
    border-radius: 6px;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    font-weight: bold;
    flex-shrink: 0;
    transition: all 0.2s;
  }

  :global(.cancion-texto) {
    flex: 1;
    font-size: 15px;
    font-weight: 500;
    color: #333;
  }

  @media (min-width: 480px) {
    .admin-container {
      padding: 24px;
    }

    .header h1 {
      font-size: 26px;
    }

    .subtitle {
      font-size: 15px;
    }

    .stats {
      gap: 16px;
    }

    .stat {
      padding: 20px;
    }

    :global(.cancion-item) {
      padding: 18px 20px;
    }

    :global(.cancion-texto) {
      font-size: 16px;
    }
  }

  @media (min-width: 768px) {
    .admin-container {
      padding: 32px;
    }

    .header h1 {
      font-size: 28px;
    }

    .stats {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>
