---
import Layout from "../layouts/Layout.astro";
import playlists from "../data/playlists.json";

const idParam = Astro.url.searchParams.get("id");
const id = idParam ? parseInt(idParam, 10) : null;
const playlist = id ? playlists.find(p => p.id === id) : null;
---

<Layout title={playlist ? `Bingo - ${playlist.nombre}` : "Playlist no encontrada"}>
  {!playlist ? (
    <div class="error-container">
      <h1>❌ Playlist no encontrada</h1>
      <a href="/" class="btn-back">← Volver al inicio</a>
    </div>
  ) : (
    <main class="carton-container">
      <header class="header">
        <a href="/" class="btn-back">←</a>
        <h1>{playlist.nombre}</h1>
      </header>

      <div id="bingo" class="bingo-grid"></div>

      <div class="actions">
        <button id="generar" class="btn btn-primary">Generar Cartón</button>
        <button id="nuevo" class="btn btn-secondary" disabled>Nuevo Cartón</button>
      </div>

      <script define:vars={{ playlistId: playlist.id, cancionesBase: playlist.canciones }}>
        const bingo = document.getElementById("bingo");
        const btnGenerar = document.getElementById("generar");
        const btnNuevo = document.getElementById("nuevo");

        const STORAGE_KEY = `bingo-carton-${playlistId}`;

        function mezclar(array) {
          const arr = [...array];
          for (let i = arr.length - 1; i > 0; i--) {
            const j = Math.floor(Math.random() * (i + 1));
            [arr[i], arr[j]] = [arr[j], arr[i]];
          }
          return arr;
        }

        function guardar(carton) {
          localStorage.setItem(STORAGE_KEY, JSON.stringify(carton));
        }

        function cargar() {
          const guardado = localStorage.getItem(STORAGE_KEY);
          return guardado ? JSON.parse(guardado) : null;
        }

        function render(carton) {
          if (!bingo) return;
          bingo.innerHTML = "";

          carton.canciones.forEach((cancion, index) => {
            const casilla = document.createElement("div");
            casilla.className = "casilla";
            
            // Si es la casilla libre
            if (index === carton.casillaLibre) {
              casilla.classList.add("libre");
              casilla.textContent = "LIBRE";
            } else {
              casilla.textContent = cancion;
              
              if (carton.marcadas[index]) {
                casilla.classList.add("marcada");
              }

              casilla.addEventListener("click", () => {
                carton.marcadas[index] = !carton.marcadas[index];
                casilla.classList.toggle("marcada");
                guardar(carton);
              });
            }

            bingo.appendChild(casilla);
          });
        }

        function generarCarton() {
          const seleccion = mezclar(cancionesBase).slice(0, 8);
          const casillaLibrePos = Math.floor(Math.random() * 9);
          
          // Insertar las canciones dejando espacio para la casilla libre
          const canciones = [];
          let cancionIndex = 0;
          for (let i = 0; i < 9; i++) {
            if (i === casillaLibrePos) {
              canciones.push("LIBRE");
            } else {
              canciones.push(seleccion[cancionIndex]);
              cancionIndex++;
            }
          }

          const carton = {
            canciones: canciones,
            marcadas: new Array(9).fill(false),
            casillaLibre: casillaLibrePos
          };
          
          // La casilla libre siempre está marcada
          carton.marcadas[casillaLibrePos] = true;

          guardar(carton);
          render(carton);
          if (btnNuevo) btnNuevo.disabled = false;
          if (btnGenerar) btnGenerar.style.display = "none";
        }

        // Cargar al inicio
        const cartonGuardado = cargar();
        if (cartonGuardado) {
          render(cartonGuardado);
          if (btnNuevo) btnNuevo.disabled = false;
          if (btnGenerar) btnGenerar.style.display = "none";
        }

        if (btnGenerar) btnGenerar.addEventListener("click", generarCarton);
        if (btnNuevo) btnNuevo.addEventListener("click", generarCarton);
      </script>
    </main>
  )}
</Layout>

<style>
  :global(body) {
    margin: 0;
    padding: 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background: #f5f5f5;
    min-height: 100vh;
  }

  .error-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 20px;
    text-align: center;
  }

  .carton-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 16px;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 24px;
    padding: 12px 0;
  }

  .header h1 {
    font-size: 20px;
    font-weight: 600;
    margin: 0;
    color: #111;
  }

  .btn-back {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 8px;
    background: #fff;
    border: 1px solid #e0e0e0;
    color: #111;
    text-decoration: none;
    font-size: 18px;
    transition: all 0.2s;
  }

  .btn-back:hover {
    background: #f5f5f5;
    transform: translateX(-2px);
  }

  .bingo-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 8px;
    margin-bottom: 24px;
    flex: 1;
  }

  :global(.casilla) {
    background: #fff;
    border: 3px solid #333;
    border-radius: 4px;
    padding: 16px 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    font-size: 12px;
    font-weight: 600;
    color: #222;
    cursor: pointer;
    user-select: none;
    transition: all 0.15s ease;
    min-height: 85px;
    word-wrap: break-word;
    overflow-wrap: break-word;
    position: relative;
    box-shadow: inset 0 0 0 0 #fff;
    text-transform: uppercase;
    letter-spacing: 0.3px;
  }

  :global(.casilla:hover:not(.marcada)) {
    background: #f8f8f8;
    transform: scale(1.02);
  }

  :global(.casilla:active) {
    transform: scale(0.98);
  }

  :global(.casilla.marcada) {
    background: #4ade80;
    border-color: #22c55e;
    color: #fff;
    box-shadow: inset 0 0 0 3px rgba(255, 255, 255, 0.3);
  }

  :global(.casilla.libre) {
    background: #fbbf24;
    border-color: #f59e0b;
    color: #fff;
    font-weight: 700;
    cursor: default;
    letter-spacing: 1px;
  }

  :global(.casilla.marcada::before) {
    content: '✓';
    position: absolute;
    top: 4px;
    right: 6px;
    font-size: 18px;
    font-weight: bold;
    color: #fff;
    animation: checkmark 0.3s ease;
  }

  @keyframes checkmark {
    0% {
      transform: scale(0) rotate(-45deg);
      opacity: 0;
    }
    50% {
      transform: scale(1.2) rotate(10deg);
    }
    100% {
      transform: scale(1) rotate(0deg);
      opacity: 1;
    }
  }

  .actions {
    display: flex;
    flex-direction: column;
    gap: 12px;
    padding-bottom: 16px;
  }

  .btn {
    padding: 16px;
    border: none;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    width: 100%;
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
  }

  .btn-primary:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
  }

  .btn-secondary {
    background: #fff;
    color: #667eea;
    border: 2px solid #667eea;
  }

  .btn-secondary:hover:not(:disabled) {
    background: #f5f7ff;
    transform: translateY(-2px);
  }

  .btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .btn:active:not(:disabled) {
    transform: translateY(0);
  }

  @media (min-width: 480px) {
    .carton-container {
      padding: 24px;
    }

    .header h1 {
      font-size: 24px;
    }

    .bingo-grid {
      gap: 12px;
    }

    .casilla {
      padding: 24px 16px;
      font-size: 14px;
      min-height: 100px;
    }

    .actions {
      flex-direction: row;
    }
  }

  @media (min-width: 768px) {
    .carton-container {
      padding: 32px;
    }

    .casilla {
      font-size: 15px;
      min-height: 120px;
    }
  }
</style>
